<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostJob"
    android:background="@drawable/base_background">

    <Spinner
        android:id="@+id/spin_selectTypeService"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="10dp"
        android:background="@drawable/custom_et"
        android:fontFamily="sans-serif-light"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_jobDescription"
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/custom_et"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="Enter the description of the job"
        android:inputType="text|textMultiLine"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_selectTypeService" />

    <Button
        android:id="@+id/but_regJob"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:text="Post Job"
        android:fontFamily="sans-serif-light"
        android:textAllCaps="false"
        android:background="@drawable/custom_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_jobDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>